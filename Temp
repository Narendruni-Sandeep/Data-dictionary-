employeeTextArea.addMouseListener(new MouseAdapter() {
    public void mouseClicked(MouseEvent e) {
        try {
            int mousePos = employeeTextArea.getCaretPosition();
            int rowIndex = employeeTextArea.getLineOfOffset(mousePos);
            if (rowIndex < employeeIdentifiers.size()) {
                String identifier = employeeIdentifiers.get(rowIndex);
                displayEmployeeDetailsByIdentifier(identifier);
            }
        } catch (Exception ex) {
            ex.printStackTrace();
        }
    }
});
