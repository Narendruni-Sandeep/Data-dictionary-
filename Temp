employeeTextArea.addMouseListener(new MouseAdapter() {
    @Override
    public void mouseClicked(MouseEvent e) {
        try {
            int caretPos = employeeTextArea.getCaretPosition();
            int lineIndex = getLineIndexFromCaret(caretPos);
            if (lineIndex > 0) { // To avoid header line
                displayEmployeeDetailsByLineIndex(lineIndex);
            }
        } catch (Exception ex) {
            ex.printStackTrace();
        }
    }
});
